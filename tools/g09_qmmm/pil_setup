rm -rf 1-GTS 2-PLG_DATA 3-PLG_OUTPUT 4-PLG_RST 5-MOLDEN 6-PLOTFILES TMP pif.* tracking

pilgrim.py --gather

pilgrim.py --input << EOD
add temp 300
add chem reac: x --> t --> x
add path t
sbw=-1.05
sfw=+1.05
ds=0.01
hsteps=10
..
end
EOD

cat > pif.calcs << EOD
start_meppoint t gaussian
%nproc=1
%mem=1024mb
%chk=[Pilgrim_name].chk
#p external=qmmm
NoSymm
[Pilgrim_gradhess]

.

0 1
[Pilgrim_geometry]

end_meppoint
EOD

pilgrim.py --pfn   | tee log

